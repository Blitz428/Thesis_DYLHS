<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Thesis.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="IvóCimbi" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Belépés: " FontSize="Title" HorizontalTextAlignment="Start" Padding="30,50,30,10" VerticalOptions="Center"/>
        <Button Clicked="Login_pressed" Margin="50"  Padding="30,10,30,10" Text="Belépés meglévő fiókkal" BorderWidth="30"/>
        <Label  Text="Regisztráció: " FontSize="Title" HorizontalTextAlignment="Start" Padding="30,0,30,0"/>
        <Button Margin="50"  Clicked="Register_pressed"  Padding="30,10,30,10" Text="Új fiókot regisztrálok" BorderWidth="30"/>
    </StackLayout>

</ContentPage>
